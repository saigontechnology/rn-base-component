{
  "name": "rn-base-component",
  "version": "0.0.10",
  "description": "test",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "*.podspec"
  ],
  "scripts": {
    "test": "jest",
    "update-test": "jest -u",
    "typecheck": "tsc --noEmit",
    "lint": "npm-run-all --parallel lint:check:*",
    "lint:check:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --cache --cache-strategy content --max-warnings=0",
    "lint:check:prettier": "prettier --check ./**/*.{ts,js,tsx,jsx,yaml,yml} --no-error-on-unmatched-pattern",
    "lint:check:tsc": "tsc --noEmit",
    "lint:fix": "npm-run-all --parallel lint:fix:*",
    "lint:fix:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings=0",
    "lint:fix:prettier": "prettier --write ./**/*.{ts,js,tsx,jsx,yaml,yml} --no-error-on-unmatched-pattern",
    "prepare": "bob build",
    "example": "yarn --cwd example",
    "release": "release-it",
    "pretty": "prettier --write \"./**/*.{js,jsx,json}\"",
    "bootstrap": "yarn example && yarn install && yarn example pods",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/saigon-technology/rn-base-component",
  "author": "React Native Team <SaiGon Technology Solutions>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saigon-technology/rn-base-component/issues"
  },
  "homepage": "https://saigontechnology.com",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^11.5.2",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/react": "^18.0.26",
    "@types/react-native": "^0.70.0",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.5.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-addons-test-utils": "^15.6.2",
    "react-native": "0.71.4",
    "react-native-builder-bob": "^0.20.4",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.0",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.0.0",
    "styled-components": "^6.1.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "18.0.26"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-reanimated": "*",
    "styled-components": "*"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "eslint-plugin-ft-flow": "^2.0.3"
  }
}
